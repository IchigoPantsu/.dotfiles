set window-title-basename "true"
set selection-clipboard "clipboard"

# Dracula color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Oceanic Material theme
#

set notification-error-bg       "#EC5f67" # Red
set notification-error-fg       "#d4be98" # Foreground
set notification-warning-bg     "#e78a4e" # Orange
set notification-warning-fg     "#282c34" # Selection
set notification-bg             "#1b2b34" # Background
set notification-fg             "#d4be98" # Foreground

set completion-bg               "#1b2b34" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#1b2b34" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#282c34" # Selection
set completion-highlight-fg     "#d4be98" # Foreground

set index-bg                    "#1b2b34" # Background
set index-fg                    "#d4be98" # Foreground
set index-active-bg             "#282c34" # Current Line
set index-active-fg             "#d4be98" # Foreground

set inputbar-bg                 "#1b2b34" # Background
set inputbar-fg                 "#d4be98" # Foreground
set statusbar-bg                "#1b2b34" # Background
set statusbar-fg                "#d4be98" # Foreground

set highlight-color             "#e78a4e" # Orange
set highlight-active-color      "#d16d92" # Pink

set default-bg                  "#1b2b34" # Background
set default-fg                  "#d4be98" # Foreground

set render-loading              true
set render-loading-fg           "#1b2b34" # Background
set render-loading-bg           "#d4be98" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#1b2b34" # Background
set recolor-darkcolor           "#d4be98" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true

#set font "adobe-source-han-sans-jp-fonts 15"
